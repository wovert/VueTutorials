{
  "compilerOptions": {    
    //语法编译为es5语法
    "target": "es5",
    //模块采用import语法且不作转换，转换工作交给gulp任务中的webpack2
    "module": "es2015",
    //用NPM模式加载
    "moduleResolution": "node",

    "lib": [
      "dom",
      "es5",
      "es2015"
    ]
  },
 
  "include": [   
    "./src/*"
  ],
 
  "exclude": [
    "./node_modules"
  ],

  //对于没有Export的库进行兼容
  "allowSyntheticDefaultImports": true,
  //开启修饰器模式
  "experimentalDecorators": true,
  //识别基本的系统类库

}