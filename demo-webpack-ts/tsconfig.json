{
  "compilerOptions": {    
    //语法编译为es5语法
    "target": "es5",
    //模块采用import语法且不作转换，转换工作交给gulp任务中的webpack2
    "module": "es2015",
    //用NPM模式加载
    "moduleResolution": "node",

    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ]
  },
 
  "include": [   
    "./src/*"
  ],
 
  "exclude": [
    "./node_modules"
  ],
  // 以严格模式解析
  "strict": true,
  // 在.tsx文件里支持JSX
  "jsx": "preserve",

  // 在表达式和声明上有隐含的any类型时报错
  "noImplicitAny": true,

  //对于没有Export的库进行兼容
  "allowSyntheticDefaultImports": true,
  //开启修饰器模式
  "experimentalDecorators": true,
  //识别基本的系统类库
  
  "sourceMap": true,
  "pretty": true

}